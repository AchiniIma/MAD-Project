<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ProductCustomerMoreDetails">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:layout_marginEnd="411dp"
        android:layout_marginBottom="731dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/cusProductImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/longsleevedshirt"
                android:paddingTop="10dp"
                android:background="#DC000000"
                android:paddingBottom="10dp"
                android:contentDescription="@string/product_image_customerView" />

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cusProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/acme"
                    android:padding="10dp"
                    android:text="@string/product_title_more"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cusProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:fontFamily="sans-serif-black"
                    android:padding="10dp"
                    android:text="@string/price_120"
                    android:textAlignment="center"
                    android:textColor="#00B8D4"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/cusProductDescription"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="sans-serif-light"
                    android:padding="10dp"
                    android:text="@string/product_description"
                    android:textColor="#D3000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/cusProductOfferPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:text="@string/offer_price"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/availableSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/available_size"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#01579B"/>

                <TextView
                    android:id="@+id/cusProductSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="#9A000000"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/sizes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/availableColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:text="@string/available_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#01579B"/>

                <TextView
                    android:id="@+id/cusProductColors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:text="@string/colors"
                    android:layout_marginStart="15dp"
                    android:textAlignment="center"
                    android:background="#C3000000"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/Addtocart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_to_cart_btn"
                android:padding="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#00B8D4"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>